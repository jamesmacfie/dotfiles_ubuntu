#!/usr/bin/env bash

alias slv="cd ~/solvedata"
alias slvapi="cd ~/solvedata/solve/api"
alias slvui="cd ~/solvedata/solve/ui/admin"

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias g="git"

# List all files colorized in long format
alias l="ls -lF ${colorflag}"

# List all files colorized in long format, excluding . and ..
alias la="ls -lAF ${colorflag}"

# List only directories
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Sharesies specific
alias src='cd /home/james/src'
alias srcs='cd /home/james/src/sharesies'
alias srcsb='cd /home/james/src/sharesies/backend-mvp && . venv/bin/activate'
alias srcj='cd /home/james/src/james'

# Pytest without the junk
alias pytest='pytest --failed-first --disable-pytest-warnings'

# Random i3 things that I want alias' for
alias b='xrandr --output eDP --brightness'

# File explorer
alias o='nautilus --browser'